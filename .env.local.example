# ========== LOCAL DEVELOPMENT ==========
# 1. Copy to .env:  copy .env.local.example .env
# 2. Run: php artisan key:generate
# 3. Run: php artisan config:clear
# 4. If using SQLite: php artisan migrate  (creates database/database.sqlite)
# 5. Start server: php artisan serve

APP_NAME="People in Microfinance"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://127.0.0.1:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

LOG_CHANNEL=stack
LOG_LEVEL=debug

# Local: SQLite (no MySQL needed). Run: php artisan migrate (creates database/database.sqlite)
DB_CONNECTION=sqlite
# DB_DATABASE= leave empty to use database/database.sqlite

# Or for XAMPP MySQL uncomment and set:
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=people_in_microfinance
# DB_USERNAME=root
# DB_PASSWORD=

# Local: file session & cache (no DB tables needed for session/cache)
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=false

CACHE_STORE=file
QUEUE_CONNECTION=sync

FILESYSTEM_DISK=local
